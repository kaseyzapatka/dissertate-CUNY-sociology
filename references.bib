}

@article{Chetty2020,
  title = {Race and {{Economic Opportunity}} in the {{United States}}: An {{Intergenerational Perspective}}},
  author = {Chetty, Raj and Hendren, Nathaniel and Jones, Maggie R and Porter, Sonya R},
