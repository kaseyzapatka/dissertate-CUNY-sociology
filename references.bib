  issn = {0739-456X},
  doi = {10.1177/0739456X17713619},
  abstract = {This study examines the relationship between light rail transit (LRT) stations and changes in neighborhood characteristics associated with gentrification using spatial regression analyses with longitudinal data across 14 US urbanized areas (UAs). Overall, we do not find evidence of prevalent gentrification in LRT station areas. An analysis of UA-specific impacts shows heterogeneous outcomes across different UAs, particularly: strong transit-oriented development (TOD) effects accompanied by gentrification in San Francisco and TOD with countergentrification in Portland. Our results highlight that different local and regional planning efforts can lead to different types of changes in transit station neighborhoods.}
}

@article{Barton2016,
